    private void initComponents2()
    {
        platformList.addListSelectionListener(new ListSelectionListener()
        {
            
            public void valueChanged(ListSelectionEvent e)
            {
                if (e.getValueIsAdjusting() == false)
                {
                    if(e.getFirstIndex() == -1)
                    {
                        setSatisfied(false);
                        parentWiz.disableNextButton();
                        return;
                    }

                    Object[] selectedValueObjects = platformList.getSelectedValues();

                    if(selectedValueObjects == null || selectedValueObjects.length == 0)
                    {
                        setSatisfied(false);
                        parentWiz.disableNextButton();
                        return;
                    }

                    String[] selectedPlatforms = new String[selectedValueObjects.length];
                    for (int i=0; i<selectedValueObjects.length; i++) {
                        selectedPlatforms[i] = (String) selectedValueObjects[i];
                    }


                    setSatisfied(true);
                    parentWiz.enableNextButton();
                    parentWiz.setPlatforms(selectedPlatforms);


                }
            }
        });
    }

