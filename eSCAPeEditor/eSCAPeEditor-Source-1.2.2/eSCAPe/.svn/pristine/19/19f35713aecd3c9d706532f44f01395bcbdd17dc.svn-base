    @Override
	public void setWizard(Wizard wizard)
    {
        parentWiz = (CreateOvalWizard) wizard;
        schemaType = parentWiz.getSchemaType();
        SCAPContentManager mgr = null;
        try {
            mgr = SCAPContentManager.getInstance(null);
        } catch (Exception e) {
            LOG.error("Exception initializing SCAPContentManager",e);
        }
        List<String> platforms = mgr.getValidPlatforms(schemaType);
        platformList.removeAll();
        listModel = new DefaultListModel();
        for (int i=0; i<platforms.size(); i++) {
            listModel.addElement(platforms.get(i));
        }
        platformList.setModel(listModel);
    }

    
